<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".MenuActivity"
    android:padding="20dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="50dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabCustomSize="60dp"
            app:fabSize="normal"
            app:maxImageSize="84dp"
            app:srcCompat="@drawable/left_arrow"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Menu"
            android:textColor="@color/secondary"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/homeViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Strona główna"
            android:textSize="25sp" />

        <Button
            android:id="@+id/infoViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siłowanie z rekinami"
            android:background="@android:color/transparent"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/timetableViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grafik"
            android:background="@android:color/transparent"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/statsViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statystyki"
            android:background="@android:color/transparent"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/settingsViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ustawienia"
            android:background="@android:color/transparent"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/aboutViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O Aplikacji"
            android:background="@android:color/transparent"
            android:textSize="25sp"/>
    </LinearLayout>

</LinearLayout>